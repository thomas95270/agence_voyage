{% extends 'base.html.twig' %}

{% block title %}Produits | {{ produit.titre }}{% endblock %}

{% block body %}
    {% include "back/menu_back.html.twig" %}

    <h1 class="text-center text-info m-5">{{ produit.titre }}</h1>

    <a class="btn btn-warning mb-3" href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>

    <table class="table table_index text-center mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img height=150px src="{{vich_uploader_asset(produit) }}"
                </td>
            </tr>
            <tr>
                <th>Maj</th>
                <td>{{ produit.maj ? produit.maj|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}€ / personne</td>
            </tr>
        </tbody>
    </table>


    <h3 class="text-center text-info m-5">Liste des étapes</h3>

    <table class="table table_index text-center mx-auto">
        <thead>
                <th>Jour</th>
                <th>Titre</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Hotel</th>
        </thead>
        <tbody>
        {% set jour = 0 %}
        {% for etape in produit.etapes %}
        {% set jour = jour+1 %}
        <tr>
                <td>{{ jour }}</td>
                <td>{{ etape.titre }}</td>
                <td>
                    <img height=150px src="{{vich_uploader_asset(etape) }}"
                </td>
                <td>{{ etape.description }}</td>

                <td>{{ etape.hotel }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="d-flex justify-content-center">
        {{ include('back/produit/_delete_form.html.twig') }}
    </div>
    </div></div>
{% endblock %}
