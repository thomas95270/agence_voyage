{% extends 'base.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}
{% include "back/menu_back.html.twig" %}

    <h1 class="text-center text-info m-5">Gestion des Destination</h1>

    <div>
        <a class="btn btn-success mb-3" href="{{ path('app_destination_new') }}">Nouvelle Destination</a>
    </div>
    <table class="table table_index text-center mx-auto">

        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.titre }}</td>
                <td>{{ destination.description }}</td>
                <td  class="col-1">
                    <div class="text-light bg-dark rounded col-10 mx-auto">
                        <a class="text-reset text-decoration-none text-light rounded"
                            href="{{ path('app_destination_show', {'id': destination.id}) }}">
                                voir
                        </a>
                    </div>
                    <div class="bg-light rounded col-10 mx-auto">
                        <a class="text-reset text-decoration-none rounded"
                            href="{{ path('app_destination_edit', {'id': destination.id}) }}">
                                Modifier
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de destination enregistr√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>
    </div>
{% endblock %}
