{% extends 'base.html.twig' %}

{% block title %}Etape{% endblock %}

{% block body %}
    <h1>Etape</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etape.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ etape.titre }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ etape.photo }}</td>
            </tr>
            <tr>
                <th>Maj</th>
                <td>{{ etape.maj ? etape.maj|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ etape.description }}</td>
            </tr>
            <tr>
                <th>Hotel</th>
                <td>{{ etape.hotel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_etape_index') }}">Retour à la liste des étapes</a>

    <a href="{{ path('app_etape_edit', {'id': etape.id}) }}">Modifier</a>

    {{ include('back/etape/_delete_form.html.twig') }}
{% endblock %}
